package com.finance.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.finance.model.Bill;

@Repository
public interface BillRepository extends JpaRepository<Bill, Long> {
	
	@Query("SELECT b FROM Bill b WHERE b.dueDate >= CURRENT_DATE AND b.dueDate <= CURRENT_DATE + :days")
    List<Bill> findBillsDueInNextDays(@Param("days") int days);
	
	List<Bill> findByUserUserId(Long userId);
}
